<h1>Burgers</h1>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
       <li>{{this.id}}. {{this.burger_name}} <button class="devour-burger" data-id = "{{this.id}}"">Devour it!</button></li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
       <li>{{this.id}}. {{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    
    <textarea id="burger" name="burger" rows="8" cols="40"></textarea>
  </div>

  <button type="submit">Submit</button>
</form>